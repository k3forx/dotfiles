PROMPT=$'\n%{$fg_bold[blue]%}%n@%{$reset_color%}%{$fg_bold[green]%}%~ %*%{$reset_color%} %{$fg_bold[blue]%}$(git_prompt_info)%{$reset_color%} $ '

[[ -z "$TMUX" && ! -z "$PS1" ]] && exec tmux

