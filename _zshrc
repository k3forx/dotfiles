# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.
#
# Example aliases
alias viz='vi ~/.zshrc'
alias vidi='vi ~/.dir_colors'
alias vivi='vi ~/.vimrc'
alias vit='vi ~/.tmux.conf'
alias vici='vi ~/.cheatsheet.md'
alias cdd='cd ~/dotfiles'
alias updatedb='sudo /usr/libexec/locate.updatedb'
alias soz='source ~/.zshrc'
alias lt='ls -t'
alias lg='clear && gst'
alias op='open'
alias opp='open .'
alias bton='blueutil --power on'
alias btoff='blueutil --power off'
alias tkse='tmux kill-session'
alias tksr='tmux kill-server'
alias vpn='open -a /Applications/Cisco/Cisco\ AnyConnect\ Secure\ Mobility\ Client.app/'
alias line='open -a /Applications/LINE.app'
alias chrome='open -a /Applications/Google\ Chrome.app/'
alias drive='open -a /Applications/google_drive.app/'
alias bupd='brew update'
alias bupg='brew upgrade'
alias bcup='brew cleanup'
alias bupdg='brew update && brew upgrade'
alias bdoc='brew doctor'
# alias ohmyzsh="mate ~/.oh-my-zsh"

